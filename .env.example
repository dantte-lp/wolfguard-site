# Environment variables for WolfGuard site deployment
# Copy this file to .env and customize values

# Git metadata (automatically populated by Makefile)
GIT_COMMIT=
BUILD_DATE=

# Application settings
TZ=UTC
NODE_ENV=production

# Traefik configuration (for production)
TRAEFIK_DOMAIN=wolfguard.infra4.dev
TRAEFIK_NETWORK=traefik-public

# Resource limits (adjust based on server capacity)
CPU_LIMIT=2.0
CPU_RESERVATION=0.5
MEMORY_LIMIT=512M
MEMORY_RESERVATION=128M

# Logging
LOG_MAX_SIZE=50m
LOG_MAX_FILES=5
