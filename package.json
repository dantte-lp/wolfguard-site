{
  "name": "wolfguard-site",
  "version": "1.0.0",
  "description": "Official website for WolfGuard VPN Server",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,json,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "node scripts/analyze-bundle.js",
    "lighthouse": "npm run build && npm run start & sleep 5 && npx lighthouse http://localhost:3000 --output=html --output=json --output-path=./lighthouse-report && kill %1",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@heroui/react": "^2.8.5",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "next": "^15.5.6",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.5.6",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.0.0",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dantte-lp/wolfguard-site.git"
  },
  "keywords": [
    "wolfguard",
    "vpn",
    "tls",
    "cisco-anyconnect",
    "wolfssl",
    "security",
    "nextjs"
  ],
  "author": "WolfGuard Team",
  "license": "GPL-3.0"
}
