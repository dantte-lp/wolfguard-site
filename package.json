{
  "name": "wolfguard-site",
  "version": "1.0.0",
  "description": "Official website for WolfGuard VPN Server",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "preview": "vite preview --host 0.0.0.0",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "@heroui/react": "2.8.5",
    "framer-motion": "12.10.0"
  },
  "devDependencies": {
    "@types/react": "19.0.6",
    "@types/react-dom": "19.0.3",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "@vitejs/plugin-react": "4.3.4",
    "eslint": "9.18.0",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "husky": "9.1.7",
    "lint-staged": "15.2.12",
    "prettier": "3.4.2",
    "tailwindcss": "4.1.16",
    "typescript": "5.7.3",
    "vite": "7.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dantte-lp/wolfguard-site.git"
  },
  "keywords": [
    "wolfguard",
    "vpn",
    "tls",
    "cisco-anyconnect",
    "wolfssl",
    "security"
  ],
  "author": "WolfGuard Team",
  "license": "GPLv2"
}
